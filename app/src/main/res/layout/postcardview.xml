<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="0dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >


        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
             android:id="@+id/postImageURL1"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:contentDescription="CardImageViewDesc"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postTitle1"
            android:layout_toRightOf="@+id/postImageURL1"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:textColor="#000"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/postlink1"
            />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postDescription1"
            android:layout_toRightOf="@+id/postImageURL1"
            android:layout_below="@+id/postTitle1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue Reading"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/postDescription1"

            />

    </RelativeLayout>

